@using (Html.BeginForm("Statistics", "Records"))
{ 
    <h3>Określ zakres danych</h3>
        <div class="panel-body">
            <div class="panel-group">
               <p>Zakres od: @Html.TextBox("dateFromParam",null, new { @class = "ml-1", type = "date", id = "rangeFrom" })</p>
                <p>Zakres do: @Html.TextBox("dateToParam", null, new { @class = "ml-1", type = "date", id = "rangeTo" })</p>
            </div>
        </div>
    <input class="btn btn-success" type="submit" value="Potwierdź" />
}