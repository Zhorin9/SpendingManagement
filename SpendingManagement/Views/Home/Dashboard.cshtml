@model SpendingManagement.Core.ViewModels.DashboardViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_RecordLayout.cshtml";
}
<h3 class="text-green">Wydatki</h3>
<div class="p-lg-4">
    <div class="row">
        <div class="col-md-4 col-sm-8">
            <div class="card card-success border-success text-white">
                <div class="card-header text-center">Wydatki tygodniowe</div>
                <div class="text-center">
                    <h4>@Model.SumWeekCharge [zł]</h4>
                    <p>Suma wydatków w obecnym tygodniu. </p>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-sm-8">
            <div class="card card-orange border-orange text-white">
                <div class="card-header text-center">Wydatki w miesiacu - <i>@Model.CurrentMonthName</i></div>
                <div class="text-center">
                    <h4>@Model.SumMonthCharge [zł]</h4>
                    <p>Suma wydatków w obecnym miesiącu.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-sm-8">
            <div class="card card-blue border-blue  text-white">
                <div class="card-header text-center">Wydatki roczne </div>
                <div class="text-center">
                    <h4>@Model.SumYearCharge [zł]</h4>
                    <p>Suma wydatków rocznych.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<hr class="hr-green" />

<h3 class="text-green">Przychody</h3>
<div class="p-lg-4">
    <div class="row">
        <div class="col-md-4 col-sm-8">
            <div class="card card-success border-success text-white">
                <div class="card-header text-center">Przychody tygodniowe</div>
                <div class="text-center">
                    <h4>@Model.WeekRevenue [zł]</h4>
                    <p>Suma przychodów w obecnym tygodniu. </p>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-sm-8">
            <div class="card card-orange border-orange text-white">
                <div class="card-header text-center">Przychody w miesiacu - <i>@Model.CurrentMonthName</i></div>
                <div class="text-center">
                    <h4>@Model.MonthRevenue [zł]</h4>
                    <p>Suma przychodów w obecnym miesiącu.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-sm-8">
            <div class="card card-blue border-blue  text-white">
                <div class="card-header text-center">Przychody roczne </div>
                <div class="text-center">
                    <h4>@Model.YearRevenue [zł]</h4>
                    <p>Suma przychodów rocznych.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<br/>

<hr class="hr-green" />

<div class="row">
    <div class="table-light col-md-6">
        <h4 class="text-center text-green">Lista ostatnich 10 wydatków</h4>
        <ul class="list-group">
            @foreach (var p in Model.LastTenExpenes)
            {
                <li class="list-group-item"><b>@p.Name</b> - @p.Charge [zł] &nbsp w dniu @p.Date.ToShortDateString()</li>
            }
        </ul>
    </div>
    <div class="col-md-6">
        <h4 class="text-center text-green">Lista ostatnich 10 przychodów</h4>
        <ul class="list-group">
            @foreach (var p in Model.LastTenRevenues)
            {
                <li class="list-group-item"><b>@p.Name</b> - @p.Charge [zł] &nbsp w dniu @p.Date.ToShortDateString()</li>
            }
        </ul>
    </div>
</div>



