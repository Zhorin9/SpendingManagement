@model SpendingManagement.WebUI.Models.DashboardViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>

</div>
<div class="p-lg-4 container">
    <div class="row">
    <div class="col-md-4 col-sm-8">
        <div class="card border-success text-success">
            <div class="card-block">
                <div class="card-header font-weight-bold">Wydatki tygodniowe</div>
                <div class="card-body text-center">
                    <h4 class="card-title">@Model.SumWeekCharge [zł]</h4>
                    <p class="card-text">Suma wydatków w obecnym tygodniu. </p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 col-sm-8">
        <div class="card border-secondary text-secondary">
            <div class="card-block">
                <div class="card-header font-weight-bold">Wydatki w miesiacu - <i>@Model.CurrentMonthName</i></div>
                <div class="card-body text-center">
                    <h4 class="card-title">@Model.SumMonthCharge [zł]</h4>
                    <p class="card-text">Suma wydatków w obecnym miesiącu.</p>
                </div>
            </div>
        </div>
    </div>
        <div class="col-md-4 col-sm-8">
            <div class="card border-primary text-primary">
                <div class="card-block">
                    <div class="card-header font-weight-bold">Wydatki roczne </div>
                    <div class="card-body text-center">
                        <h4 class="card-title">@Model.SumYearCharge [zł]</h4>
                        <p class="card-text">Suma wydatków rocznych.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="p-lg-4 col-md-8">
            <div class="card text-white">
                <h5 class="card-header text-center">Lista ostatnich 10 wydatków</h5>
                <ul class="list-group">
                    @foreach (var p in Model.Expsenses)
                    {
                        <li class="list-group-item">@p.Name - @p.Charge [zł] &nbsp w dniu @p.Date</li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>