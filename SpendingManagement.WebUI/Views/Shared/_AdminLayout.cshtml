@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width">
    <link href="~/Content/bootstrap-solar.css" rel="stylesheet" />
    <link href="~/Content/ErrorStyles.css" rel="stylesheet"/>
    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <title></title>
</head>
<body>
    <div class="navbar navbar-expand-lg navbar-light bg-light" role="navigation">
        <h3 class="navbar-brand">Zarządzanie wydatkami</h3>
        <img src="~/Images/money_time.png" class="mr-4" alt="time or money" height="40" width="40" />
        <ul class="nav nav-tabs">
            <li id="categories" class="nav-item">
                @Html.ActionLink("Okno główne", "Index", "Expense", null, new { @class = "nav-link" })
            </li>
            <li>
                @Html.ActionLink("Zarządzaj danymi", "Index", "Admin", null, new { @class = "nav-link" })
            </li>
            <li>
                @Html.ActionLink("Statystyki", "Statistics", "Expense", null, new { @class = "nav-link" })
            </li>
            <li>
                @Html.ActionLink("Dodaj wydatek", "Create", null, new { @class = "nav-link text-primary" })
            </li>
            <li>
                @Html.ActionLink("Dodaj przychód", "Create", null, new { @class = "nav-link text-primary" })
            </li>
        </ul>
    </div>

    <div>
        @if(TempData["message"] != null)
        {
            <div class="alert-light alert-success">@TempData["message"]</div>
        }
        @RenderBody()
    </div>
</body>
</html>
