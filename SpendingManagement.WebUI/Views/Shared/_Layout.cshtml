<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap-solar.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="~/Scripts/Highcharts-4.0.1/js/highcharts.js"></script>
    <title>@ViewBag.Title</title>

</head>
<body>
    <div class="navbar navbar-expand-lg navbar-light bg-light p-lg-2" role="navigation">
        <h3 class="navbar-brand">Zarządzanie wydatkami</h3>
        <img src="~/Images/money_time.png" class="mr-4 " alt="time or money" height="40" width="40" />
        <ul class="nav nav-tabs">
            <li id="categories" class="nav-item">
                @Html.ActionLink("Okno główne", "Index", "Expense", null, new { @class = "nav-link" })
            </li>
            <li>
                @Html.ActionLink("Zarządzaj danymi", "Index", "Admin", null, new { @class = "nav-link" })
            </li> 
            <li>
                @Html.ActionLink("Statystyki", "Statistics", "Expense", null, new { @class = "nav-link" })
            </li>
        </ul>
    </div>
    <div>@RenderBody()</div>   
 
    <div class="panel-footer navbar-light bg-light text-dark text-center">
        <p>Jaros™ Przemysław @DateTime.Now</p>
    </div>
</body>
</html>