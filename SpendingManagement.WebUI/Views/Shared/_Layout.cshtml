<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="~/Scripts/jquery-3.3.1.min.js" type="text/javascript"></script>
    <script src="~/Scripts/Highcharts-4.0.1/js/highcharts.js"></script>
    <link href="~/Content/bootstrap-solar.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>

</head>
<body>
    <nav class="navbar navbar-inverse navbar-expand navbar-light bg-light" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <h5 class="navbar-brand">Zarządzanie wydatkami</h5>
                <img src="~/Images/money_time.png" class="nav-item" alt="time or money" height="40" width="40" />
            </div>
            <ul class="nav navbar-light mr-auto">
                <li id="categories">
                    @Html.ActionLink("Okno główne", "Index", "Expense", null, new { @class = "nav-link" })
                </li>
                <li>
                    @Html.ActionLink("Zarządzaj danymi", "Index", "Admin", null, new { @class = "nav-link" })
                </li>
                <li>
                    @Html.ActionLink("Statystyki", "Statistics", "Expense", null, new { @class = "nav-link" })
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="mx-lg-2"><p><span class="glyphicon glyphicon-user"></span> @Html.ActionLink("Konto", "Details", "Account")</p></li>
                <li class="mx-lg-2"><p><span class="glyphicon glyphicon-log-out"></span> @Html.ActionLink("Wyloguj", "Logout", "Account")</p></li>
            </ul>
        </div>
    </nav>
    <div>@RenderBody()</div>   
 
    <div class="panel-footer navbar-light bg-light text-dark text-center">
        <p>Jaros™ Przemysław <output type="text" id="clock" /></p>
        <script type="text/javascript">
            setInterval("settime()", 1000);
            function settime() {
                var dateTime = new Date();
                var day = dateTime.getUTCDate();
                var month = dateTime.getMonth()+1;
                var year = dateTime.getFullYear()
                var hour = dateTime.getHours();
                var minute = dateTime.getMinutes();
                var second = dateTime.getSeconds();
                if (day < 10)
                    day = "0" + day;
                if (month < 10)
                    month = "0" + month;
                if (minute < 10)
                    minute = "0" + minute;
                if (second < 10)
                    second = "0" + second;          
                var time =day + "/" + month + "/" + year + "  " + hour + ":" + minute + ":" + second;
                document.getElementById("clock").value = time;
            }
        </script>
    </div>
</body>
</html>