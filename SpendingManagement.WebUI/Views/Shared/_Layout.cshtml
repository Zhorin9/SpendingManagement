<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap-solar.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="~/Scripts/Highcharts-4.0.1/js/highcharts.js"></script>
    <title>@ViewBag.Title</title>

</head>
<body>
    <nav class="navbar navbar-inverse navbar-expand navbar-light bg-light" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <h5 class="navbar-brand">Zarządzanie wydatkami</h5>
                <img src="~/Images/money_time.png" class="nav-item" alt="time or money" height="40" width="40" />
            </div>
            <ul class="nav navbar-nav mr-auto">
                <li id="categories">
                    @Html.ActionLink("Okno główne", "Index", "Expense", null, new { @class = "btn" })
                </li>
                <li>
                    @Html.ActionLink("Zarządzaj danymi", "Index", "Admin", null, new { @class = "btn" })
                </li>
                <li>
                    @Html.ActionLink("Statystyki", "Statistics", "Expense", null, new { @class = "btn" })
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="mx-lg-2"><p><span class="glyphicon glyphicon-user"></span> @Html.ActionLink("Rejestracja", "Index", "Expense", null, new { @class = "" })</p></li>
                <li class="mx-lg-2"><p><span class="glyphicon glyphicon-log-in"></span> @Html.ActionLink("Zaloguj", "Index", "Expense", null, new { @class = "" })</p></li>
            </ul>
        </div>
    </nav>
    <div>@RenderBody()</div>   
 
    <div class="panel-footer navbar-light bg-light text-dark text-center">
        <p>Jaros™ Przemysław @DateTime.Now</p>
    </div>
</body>
</html>